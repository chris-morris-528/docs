{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "aspen",
  "name": "Vanta Docs",
  "colors": {
    "primary": "#240642",
    "light": "#a13dff",
    "dark": "#7339aa"
  },
  "appearance": {
    "default": "light"
  },
  "styling": {
    "codeblocks": "system"
  },
  "background": {
    "color": {
      "light": "#FAF7FE",
      "dark": "#1C0236"
    }
  },
  "fonts": {
    "heading": {
      "family": "Nib Pro",
      "source": "https://cdn.prod.website-files.com/64009032676f24f376f002fc/65301972e2080cdf82338ffb_nib-bold-pro.woff2",
      "format": "woff2"
    },
    "body": {
      "family": "Inter"
    }
  },
  "favicon": "/favicon.png",
  "contextual": {
    "options": ["copy", "view", "chatgpt", "claude", "cursor", "mcp", "vscode"]
  },
  "navigation": {
    "tabs": [
      {
        "tab": "Home",
        "pages": ["index"]
      },
      {
        "tab": "Docs",
        "groups": [
          {
            "group": "Getting Started",
            "pages": ["docs/vanta-api-overview", "docs/vanta-postman-setup", "docs/vanta-first-api-request"]
          },
          {
            "group": "Guieds",
            "pages": [
              {
                "group": "Monitor & Manage Personnel",
                "pages": [
                  "docs/monitor-manage-personnel",
                  "docs/mark-people-as-not-a-person"
                ]
              }
            ]
          }
        ]
      },
      {
        "tab": "API Reference",
        "groups": [
          {
            "group": "Manage Vanta",
            "openapi": ["reference/manage-vanta.json"]
          },
          {
            "group": "Build Integrations",
            "openapi": ["reference/build-integrations.json"]
          }
        ]
      },
      {
        "tab": "FAQ",
        "pages": ["docs/faq"]
      }
    ],
    "global": {
      "anchors": [
        {
          "anchor": "Help Center",
          "href": "https://help.vanta.com/en/",
          "icon": "circle-question"
        },
        {
          "anchor": "Community",
          "href": "https://www.vanta.com/community/join",
          "icon": "users"
        },
        {
          "anchor": "Blog",
          "href": "https://www.vanta.com/resourcetype/blogs",
          "icon": "newspaper"
        }
      ]
    }
  },
  "logo": {
    "light": "/logo/light.svg",
    "dark": "/logo/dark.svg",
    "href": "https://www.vanta.com/"
  },
  "navbar": {
    "links": [
      {
        "label": "Login",
        "href": "https://app.vanta.com/login"
      }
    ],
    "primary": {
      "type": "button",
      "label": "Request a demo",
      "href": "https://www.vanta.com/demo"
    }
  },
  "footer": {
    "socials": {
      "linkedin": "https://www.linkedin.com/company/vanta-security/",
      "x": "https://twitter.com/TrustVanta"
    }
  }
}
